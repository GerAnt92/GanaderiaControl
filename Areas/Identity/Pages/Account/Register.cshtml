@page
@model RegisterModel
@{
    ViewData["Title"] = "Crear cuenta";
    Layout = null; // pantalla limpia, sin navbar/layout
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] | Sistema Ganadero</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(rgba(0,0,0,.5), rgba(0,0,0,.5)), url('https://images.unsplash.com/photo-1605810230434-7631ac7f0fdb?auto=format&fit=crop&w=1920&q=80') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Poppins', system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
            min-height: 100vh;
        }

        .login-card {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.9);
            border-radius: 16px;
            box-shadow: 0 8px 30px rgba(0,0,0,.2);
            padding: 2rem;
        }

        .btn-green {
            background-color: #3d9970;
            color: #fff;
            transition: all 0.3s ease;
            border: none;
            font-weight: 600;
        }

            .btn-green:hover {
                background-color: #2e7d57;
            }

        .logo {
            font-size: 2rem;
            font-weight: bold;
            color: #3d9970;
        }

        .form-control:focus {
            border-color: #3d9970;
            box-shadow: 0 0 0 .2rem rgba(61,153,112,.15);
        }

        .muted {
            color: #6b7280;
        }

        .small-link {
            color: #3d9970;
            text-decoration: none;
        }

            .small-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="login-card col-11 col-md-5 col-lg-4">
            <div class="text-center mb-4">
                <div class="logo">GanaderíaApp</div>
                <p class="text-muted mb-0">Crea tu cuenta</p>
            </div>

            <!-- VALIDACIONES -->
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2" role="alert"></div>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="ejemplo@correo.com" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="••••••••" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar contraseña</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="••••••••" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>

                <button id="registerSubmit" type="submit" class="btn btn-green w-100">Crear cuenta</button>

                <div class="text-center mt-3">
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="small small-link">
                        ¿Ya tienes cuenta? Inicia sesión
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
