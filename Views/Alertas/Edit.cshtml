@model GanaderiaControl.Models.Alerta
@using Microsoft.AspNetCore.Mvc.Rendering
@using GanaderiaControl.Models
@{
    Layout = "_Layout";
    ViewData["Title"] = "Editar Alerta";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0">Editar alerta</h1>
    <a href="@Url.Action("Index", "Alertas")" class="btn btn-outline-secondary">Volver</a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        @using (Html.BeginForm("Edit", "Alertas", FormMethod.Post, new { @class = "row g-3" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            <div class="col-md-6">
                @Html.LabelFor(m => m.AnimalId, "Animal", new { @class = "form-label" })
                @Html.DropDownListFor(m => m.AnimalId, (IEnumerable<SelectListItem>)ViewBag.AnimalId, "-- Seleccione --", new { @class = "form-select" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(m => m.FechaObjetivo, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.FechaObjetivo, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(m => m.Tipo, new { @class = "form-label" })
                @Html.DropDownListFor(m => m.Tipo, Html.GetEnumSelectList<TipoAlerta>(), "-- Seleccione --", new { @class = "form-select" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(m => m.Estado, new { @class = "form-label" })
                @Html.DropDownListFor(m => m.Estado, Html.GetEnumSelectList<EstadoAlerta>(), "-- Seleccione --", new { @class = "form-select" })
            </div>
            <div class="col-md-9">
                @Html.LabelFor(m => m.Disparador, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Disparador, new { @class = "form-control" })
            </div>
            <div class="col-12">
                @Html.LabelFor(m => m.Notas, new { @class = "form-label" })
                @Html.TextAreaFor(m => m.Notas, 3, 0, new { @class = "form-control" })
            </div>

            <div class="col-12 mt-2">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a href="@Url.Action("Index", "Alertas")" class="btn btn-secondary">Cancelar</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
