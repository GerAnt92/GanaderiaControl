@model GanaderiaControl.Models.Alerta
@{
    Layout = "_Layout";
    ViewData["Title"] = "Detalle Alerta";
}
<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0">Detalle alerta</h1>
    <div>
        <a href='@Url.Action("Edit", "Alertas", new { id = Model.Id })' class="btn btn-primary">Editar</a>
        <a href='@Url.Action("Index", "Alertas")' class="btn btn-outline-secondary">Volver</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Animal</dt>
            <dd class="col-sm-9">@Model.Animal.Arete - @Model.Animal.Nombre</dd>
            <dt class="col-sm-3">Fecha</dt>
            <dd class="col-sm-9">@Model.FechaObjetivo.ToString("yyyy-MM-dd")</dd>
            <dt class="col-sm-3">Tipo</dt>
            <dd class="col-sm-9">@Model.Tipo</dd>
            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@Model.Estado</dd>
            <dt class="col-sm-3">Disparador</dt>
            <dd class="col-sm-9">@Model.Disparador</dd>
            <dt class="col-sm-3">Notas</dt>
            <dd class="col-sm-9">@Model.Notas</dd>
        </dl>
    </div>
</div>
