@model IEnumerable<GanaderiaControl.Models.ChequeoGestacion>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Chequeos de Gestación";
    var q = ViewBag.Q as string;
}
<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0">Chequeos de Gestación</h1>
    <a href="@Url.Action("Create")" class="btn btn-success"><span class="me-1">+</span> Nuevo</a>
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        @using (Html.BeginForm("Index", "ChequeosGestacion", FormMethod.Get, new { @class = "row g-2 align-items-center" }))
        {
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text">Buscar</span>
                    @Html.TextBox("q", q, new { @class = "form-control", placeholder = "arete, nombre u observaciones…" })
                    <button type="submit" class="btn btn-primary">Buscar</button>
                    @if (!string.IsNullOrWhiteSpace(q))
                    {
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Limpiar</a>
                    }
                </div>
            </div>
        }
    </div>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Fecha</th>
                    <th>Animal</th>
                    <th>Resultado</th>
                    <th>Observaciones</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center py-4 text-muted">Sin registros.</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FechaChequeo:dd/MM/yyyy</td>
                            <td>
                                @item.Animal?.Arete
                                @if (!string.IsNullOrWhiteSpace(item.Animal?.Nombre))
                                {
                                    <span> - @item.Animal?.Nombre</span>
                                }
                            </td>
                            <td>@item.Resultado</td>
                            <td>@item.Observaciones</td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Details", new { id = item.Id })">Detalles</a>
                                    <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Edit", new { id = item.Id })">Editar</a>
                                    <a class="btn btn-sm btn-outline-danger" href="@Url.Action("Delete", new { id = item.Id })">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
