@model GanaderiaControl.Models.ServicioReproductivo
@{
    Layout = "_Layout";
    ViewData["Title"] = "Detalle Servicio";
}
<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0">Detalle servicio</h1>
    <div>
        <a href="@Url.Action("Edit", "Servicios", new { id = Model.Id })" class="btn btn-primary">Editar</a>
        <a href="@Url.Action("Index", "Servicios")" class="btn btn-outline-secondary">Volver</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Animal</dt>
            <dd class="col-sm-9">@Model.Animal.Arete @if(!string.IsNullOrWhiteSpace(Model.Animal?.Nombre)){
            <text>- @Model.Animal.Nombre</text>
                        }
</dd>
            <dt class="col-sm-3">Fecha</dt>
            <dd class="col-sm-9">@Model.FechaServicio.ToString("yyyy-MM-dd")</dd>
            <dt class="col-sm-3">Tipo</dt>
            <dd class="col-sm-9">@Model.Tipo</dd>
            <dt class="col-sm-3">Toro / Proveedor</dt>
            <dd class="col-sm-9">@Model.ToroOProveedor</dd>
        </dl>
    </div>
</div>
