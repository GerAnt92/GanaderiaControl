@model IEnumerable<GanaderiaControl.Models.ServicioReproductivo>
@{
    Layout = "_Layout"; // quítalo si ya tienes Views/_ViewStart.cshtml
    ViewData["Title"] = "Servicios";
    var q = ViewData["q"] as string;
    int total = Model?.Count() ?? 0;
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0">Servicios reproductivos</h1>
    <a href="@Url.Action("Create", "Servicios")" class="btn btn-success">
        <span class="me-1">+</span> Nuevo
    </a>
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <form action="@Url.Action("Index", "Servicios")" method="get" class="row g-2 align-items-center">
            <div class="col-md-7">
                <div class="input-group">
                    <span class="input-group-text">Buscar</span>
                    <input type="text" name="q" value="@(q)" class="form-control" placeholder="Por arete o nombre…" />
                    <button class="btn btn-primary" type="submit">Buscar</button>
                    @if (!string.IsNullOrWhiteSpace(q))
                    {
                        <a href="@Url.Action("Index", "Servicios")" class="btn btn-outline-secondary">Limpiar</a>
                    }
                </div>
            </div>
            <div class="col-md-5 text-md-end">
                <span class="text-muted">Total: <strong>@total</strong></span>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Arete</th>
                    <th>Nombre</th>
                    <th class="text-nowrap">Fecha</th>
                    <th>Tipo</th>
                    <th>Toro / Proveedor</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var s in Model)
                    {
                        var tipoTexto = s.Tipo.ToString().ToLowerInvariant();
                        var tipoBadge =
                        tipoTexto.Contains("insemin") ? "bg-primary" :
                        (tipoTexto.Contains("monta") || tipoTexto.Contains("natural")) ? "bg-success" :
                        tipoTexto.Contains("embri") ? "bg-info text-dark" :
                        "bg-secondary";

                        <tr>
                            <td class="fw-semibold">@s.Animal.Arete</td>
                            <td>@s.Animal?.Nombre</td>
                            <td class="text-nowrap">@s.FechaServicio.ToString("yyyy-MM-dd")</td>
                            <td><span class="badge rounded-pill @tipoBadge">@s.Tipo</span></td>
                            <td><div class="text-truncate" style="max-width: 260px;">@s.ToroOProveedor</div></td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a href='@Url.Action("Details", "Servicios", new { id = s.Id })' class="btn btn-sm btn-outline-secondary">Ver</a>
                                    <a href='@Url.Action("Edit", "Servicios", new { id = s.Id })' class="btn btn-sm btn-outline-primary">Editar</a>
                                    <a href='@Url.Action("Delete", "Servicios", new { id = s.Id })' class="btn btn-sm btn-outline-danger">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-4 text-muted">
                            No hay servicios registrados.
                            <a href='@Url.Action("Create", "Servicios")' class="ms-2">Crear el primero</a>.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
