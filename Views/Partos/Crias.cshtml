@model IEnumerable<GanaderiaControl.Models.Cria>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Crías";
    var parto = ViewBag.Parto as GanaderiaControl.Models.Parto;
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h4 mb-1">Crías del parto #@parto?.Id</h1>
        <div class="text-muted">Madre: @parto?.Madre?.Arete @(string.IsNullOrWhiteSpace(parto?.Madre?.Nombre) ? "" : " - " + parto!.Madre!.Nombre) • Fecha: @parto?.FechaParto.ToString("yyyy-MM-dd")</div>
    </div>
    <div>
        <a href="@Url.Action("Index", "Partos")" class="btn btn-outline-secondary">Volver a Partos</a>
        <a href="@Url.Action("CriaCreate", "Partos", new { partoId = parto!.Id })" class="btn btn-primary">Nueva cría</a>
    </div>
</div>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-sm table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Sexo</th>
                        <th>Peso (kg)</th>
                        <th>Arete</th>
                        <th>Estado</th>
                        <th>Obs.</th>
                        <th style="width:170px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.Sexo</td>
                            <td>@(c.PesoNacimientoKg?.ToString("0.0") ?? "-")</td>
                            <td>@c.AreteAsignado</td>
                            <td>@c.Estado</td>
                            <td>@c.Observaciones</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("CriaDetails", "Partos", new { id = c.Id })">Ver</a>
                                <a class="btn btn-sm btn-outline-primary" href="@Url.Action("CriaEdit", "Partos", new { id = c.Id })">Editar</a>
                                <a class="btn btn-sm btn-outline-danger" href="@Url.Action("CriaDelete", "Partos", new { id = c.Id })">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
