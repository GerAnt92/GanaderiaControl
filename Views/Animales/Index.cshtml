@model IEnumerable<GanaderiaControl.Models.Animal>
@using GanaderiaControl.Models
@{
    Layout = "_Layout";
    ViewData["Title"] = "Animales";
    var q = ViewData["q"] as string;
    int total = Model?.Count() ?? 0;
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0">Animales</h1>
    <a href="@Url.Action("Create", "Animales")" class="btn btn-success">
        <span class="me-1">+</span> Nuevo
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form action="@Url.Action("Index", "Animales")" method="get" class="row g-2 align-items-center">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text">Buscar</span>
                    <input type="text" name="q" value="@(q)" class="form-control" placeholder="Por arete o nombre…" />
                    <button class="btn btn-primary" type="submit">Buscar</button>
                    @if (!string.IsNullOrWhiteSpace(q))
                    {
                        <a href="@Url.Action("Index", "Animales")" class="btn btn-outline-secondary">Limpiar</a>
                    }
                </div>
            </div>
            <div class="col-md-6 text-md-end">
                <span class="text-muted">Total: <strong>@total</strong></span>
            </div>
        </form>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Arete</th>
                    <th>Nombre</th>
                    <th>Raza</th>
                    <th>Estado</th>
                    <th class="text-nowrap">F. Nacimiento</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        var badgeClass = item.EstadoReproductivo switch
                        {
                            EstadoReproductivo.Gestante => "bg-info",
                            EstadoReproductivo.Lactando => "bg-success",
                            EstadoReproductivo.Secada => "bg-warning text-dark",
                            _ => "bg-secondary"
                        };
                        <tr>
                            <td class="fw-semibold">@item.Arete</td>
                            <td>@item.Nombre</td>
                            <td>@item.Raza</td>
                            <td><span class="badge rounded-pill @badgeClass">@item.EstadoReproductivo</span></td>
                            <td>@item.FechaNacimiento?.ToString("yyyy-MM-dd")</td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a href="@Url.Action("Details", "Animales", new { id = item.Id })" class="btn btn-sm btn-outline-secondary">Ver</a>
                                    <a href="@Url.Action("Edit", "Animales", new { id = item.Id })" class="btn btn-sm btn-outline-primary">Editar</a>
                                    <a href="@Url.Action("Delete", "Animales", new { id = item.Id })" class="btn btn-sm btn-outline-danger">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-4 text-muted">
                            No hay animales registrados.
                            <a href="@Url.Action("Create", "Animales")" class="ms-2">Crear el primero</a>.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
