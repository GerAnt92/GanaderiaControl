@model GanaderiaControl.Models.RegistroLeche
@{
    ViewData["Title"] = "Crear registro de leche";
}

@section Styles {
    <style>
        .card-fancy {
            border-radius: 16px;
            border: 1px solid #eaeef3;
            box-shadow: 0 8px 22px rgba(2,32,71,.06);
        }
    </style>
}

<div class="container">
    <div class="d-flex align-items-center justify-content-between mt-3 mb-3">
        <div>
            <h2 class="mb-0">Nuevo registro de leche</h2>
            <div class="text-muted">Ingresa la producción diaria para una vaca</div>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
    </div>

    <form asp-action="Create" method="post" class="card card-body card-fancy">
        @Html.AntiForgeryToken()

        <partial name="_Form" model="Model" />

        <div asp-validation-summary="ModelOnly" class="text-danger mt-3 mb-2"></div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-light border">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
