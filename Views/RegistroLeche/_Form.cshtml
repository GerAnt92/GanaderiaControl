@model GanaderiaControl.Models.RegistroLeche
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    var animales = ViewBag.AnimalId as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>());
}

<div class="mb-3">
    <label asp-for="AnimalId" class="form-label">Vaca</label>
    <select asp-for="AnimalId" class="form-select" asp-items="animales">
        <option value="">-- Selecciona una vaca --</option>
    </select>
    <span asp-validation-for="AnimalId" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Fecha" class="form-label"></label>
    <input asp-for="Fecha" class="form-control" type="date" />
    <span asp-validation-for="Fecha" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="LitrosDia" class="form-label"></label>
    <input asp-for="LitrosDia" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
    <span asp-validation-for="LitrosDia" class="text-danger"></span>
</div>
