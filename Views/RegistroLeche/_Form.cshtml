@model GanaderiaControl.Models.RegistroLeche

<div class="row g-3">
    <!-- Animal -->
    <div class="col-12 col-md-6">
        <label asp-for="AnimalId" class="form-label">Vaca</label>
        <select asp-for="AnimalId" asp-items="ViewBag.AnimalId" class="form-select">
            <option value="">-- Selecciona una vaca --</option>
        </select>
        <span asp-validation-for="AnimalId" class="text-danger"></span>
    </div>

    <!-- Fecha (solo día) -->
    <div class="col-12 col-md-3">
        <label asp-for="Fecha" class="form-label">Fecha</label>
        <input asp-for="Fecha" type="date" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <!-- Litros del día -->
    <div class="col-12 col-md-3">
        <label asp-for="LitrosDia" class="form-label">Litros (día)</label>
        <input asp-for="LitrosDia" type="number" step="0.01" min="0" class="form-control" />
        <span asp-validation-for="LitrosDia" class="text-danger"></span>
    </div>
</div>
