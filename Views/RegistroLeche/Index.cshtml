@model IEnumerable<GanaderiaControl.Models.RegistroLeche>
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    Layout = "_Layout";
    ViewData["Title"] = "Registros de Leche";

    var q = ViewData["q"] as string ?? ViewBag.FiltroQ as string ?? "";
    var animales = ViewBag.Animales as List<SelectListItem> ?? new List<SelectListItem>();
    int? animalSel = ViewBag.FiltroAnimalId as int?;
    string fDesde = ViewBag.FiltroDesde as string ?? "";
    string fHasta = ViewBag.FiltroHasta as string ?? "";

    int total = Model?.Count() ?? 0;
    decimal totalLitros = Model?.Sum(x => x.LitrosDia) ?? 0m;
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0">Registros de Leche</h1>
    <a href="@Url.Action("Create", "RegistroLeche")" class="btn btn-success">
        <span class="me-1">+</span> Nuevo
    </a>
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <form action="@Url.Action("Index", "RegistroLeche")" method="get" class="row g-2 align-items-end">
            <div class="col-lg-4">
                <label class="form-label mb-1">Buscar vaca</label>
                <div class="input-group">
                    <span class="input-group-text">Vaca</span>
                    <input type="text" name="q" value="@q" class="form-control" placeholder="Por arete o nombre…" />
                </div>
            </div>

            <div class="col-lg-3">
                <label class="form-label mb-1">Filtrar por vaca</label>
                <select name="animalId" class="form-select">
                    <option value="">-- Todas --</option>
                    @foreach (var a in animales)
                    {
                        var selected = (animalSel?.ToString() ?? "") == a.Value ? "selected" : null;
                        <option value="@a.Value" selected="@selected">@a.Text</option>
                    }
                </select>
            </div>

            <div class="col-lg-2">
                <label class="form-label mb-1">Desde</label>
                <input type="date" name="desde" value="@fDesde" class="form-control" />
            </div>

            <div class="col-lg-2">
                <label class="form-label mb-1">Hasta</label>
                <input type="date" name="hasta" value="@fHasta" class="form-control" />
            </div>

            <div class="col-lg-1 d-grid">
                <button class="btn btn-primary" type="submit">Buscar</button>
            </div>

            @if (!string.IsNullOrWhiteSpace(q) || !string.IsNullOrWhiteSpace(fDesde) || !string.IsNullOrWhiteSpace(fHasta) || animalSel.HasValue)
            {
                <div class="col-12 mt-1">
                    <a href="@Url.Action("Index", "RegistroLeche")" class="btn btn-outline-secondary btn-sm">Limpiar</a>
                </div>
            }

            <div class="col-12 col-lg-4 ms-lg-auto text-lg-end mt-2 mt-lg-0">
                <span class="text-muted me-3">Total registros: <strong>@total</strong></span>
                <span class="text-muted">Litros listados: <strong>@totalLitros.ToString("0.##") L</strong></span>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th class="text-nowrap">Fecha</th>
                    <th>Vaca</th>
                    <th class="text-end">Litros</th>
                    <th class="text-end text-nowrap">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var r in Model)
                    {
                        var vaca = r.Animal is null
                        ? "(sin datos)"
                        : (string.IsNullOrWhiteSpace(r.Animal.Nombre)
                        ? r.Animal.Arete
                        : $"{r.Animal.Arete} - {r.Animal.Nombre}");

                        <tr>
                            <td>@r.Fecha.ToString("yyyy-MM-dd")</td>
                            <td class="fw-semibold">@vaca</td>
                            <td class="text-end"><span class="fw-bold">@r.LitrosDia.ToString("0.##")</span> L</td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a href="@Url.Action("Details", "RegistroLeche", new { id = r.Id })" class="btn btn-sm btn-outline-secondary">Ver</a>
                                    <a href="@Url.Action("Edit", "RegistroLeche", new { id = r.Id })" class="btn btn-sm btn-outline-primary">Editar</a>
                                    <a href="@Url.Action("Delete", "RegistroLeche", new { id = r.Id })" class="btn btn-sm btn-outline-danger">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center py-4 text-muted">
                            No hay registros para los filtros seleccionados.
                            <a href="@Url.Action("Create", "RegistroLeche")" class="ms-2">Crear el primero</a>.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
