@model GanaderiaControl.Models.RegistroLeche
@{
    Layout = "_Layout";
    ViewData["Title"] = "Detalle de registro";

    var vaca = Model.Animal is null
        ? "(sin datos)"
        : (string.IsNullOrWhiteSpace(Model.Animal.Nombre)
            ? Model.Animal.Arete
            : $"{Model.Animal.Arete} · {Model.Animal.Nombre}");
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h1 class="h3 mb-0">Detalle del registro</h1>
        <div class="text-muted small">ID #@Model.Id</div>
    </div>
    <div class="d-flex gap-2">
        <a href="@Url.Action("Edit", "RegistroLeche", new { id = Model.Id })" class="btn btn-primary">
            Editar
        </a>
        <a href="@Url.Action("Index", "RegistroLeche")" class="btn btn-outline-secondary">
            Volver
        </a>
    </div>
</div>

<div class="row g-3">
    <!-- Card: Vaca -->
    <div class="col-12 col-md-6 col-xl-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <div class="text-muted text-uppercase small mb-1">Vaca</div>
                <div class="d-flex align-items-center gap-2">
                    <div class="rounded-circle bg-light border d-inline-flex align-items-center justify-content-center" style="width:36px;height:36px;">
                        <i class="bi bi-tag"></i>
                    </div>
                    <div class="fw-semibold">@vaca</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Card: Fecha -->
    <div class="col-12 col-md-3 col-xl-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <div class="text-muted text-uppercase small mb-1">Fecha</div>
                <div class="d-flex align-items-center gap-2">
                    <div class="rounded-circle bg-light border d-inline-flex align-items-center justify-content-center" style="width:36px;height:36px;">
                        <i class="bi bi-calendar-event"></i>
                    </div>
                    <div class="fw-semibold">@Model.Fecha.ToString("yyyy-MM-dd")</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Card: Litros -->
    <div class="col-12 col-md-3 col-xl-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <div class="text-muted text-uppercase small mb-1">Litros (día)</div>
                <div class="d-flex align-items-center gap-2">
                    <div class="rounded-circle bg-light border d-inline-flex align-items-center justify-content-center" style="width:36px;height:36px;">
                        <i class="bi bi-droplet-half"></i>
                    </div>
                    <div class="fs-5 fw-bold">@Model.LitrosDia.ToString("0.##") <span class="text-muted fs-6 fw-normal">L</span></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Card: Meta/otra info (opcional) -->
<div class="card mt-3 shadow-sm">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-12 col-md-6">
                <div class="text-muted small">Creado</div>
                <div class="fw-semibold">
                    @((Model as dynamic)?.CreatedAt is DateTime c1 ? c1.ToString("yyyy-MM-dd HH:mm") + " UTC" : "—")
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="text-muted small">Actualizado</div>
                <div class="fw-semibold">
                    @((Model as dynamic)?.UpdatedAt is DateTime u1 ? u1.ToString("yyyy-MM-dd HH:mm") + " UTC" : "—")
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <!-- Si usas Bootstrap Icons, asegúrate de tenerlos incluidos globalmente.
         Si no los tienes, puedes omitir los <i class="bi ..."></i> o cambiar por emojis. -->
}
