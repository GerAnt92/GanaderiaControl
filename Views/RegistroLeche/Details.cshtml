@model GanaderiaControl.Models.RegistroLeche
@{
    Layout = "_Layout";
    ViewData["Title"] = "Detalle de registro";
    var vaca = Model.Animal is null
        ? "(sin datos)"
        : (string.IsNullOrWhiteSpace(Model.Animal.Nombre) ? Model.Animal.Arete : $"{Model.Animal.Arete} - {Model.Animal.Nombre}");
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0">Detalle del registro</h1>
    <div class="d-flex gap-2">
        <a href="@Url.Action("Edit", "RegistroLeche", new { id = Model.Id })" class="btn btn-primary">Editar</a>
        <a href="@Url.Action("Index", "RegistroLeche")" class="btn btn-outline-secondary">Volver</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Vaca</dt>
            <dd class="col-sm-9">@vaca</dd>

            <dt class="col-sm-3">Fecha</dt>
            <dd class="col-sm-9">@Model.Fecha.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Litros del día</dt>
            <dd class="col-sm-9"><span class="fw-bold">@Model.LitrosDia.ToString("0.##")</span> L</dd>
        </dl>
    </div>
</div>
