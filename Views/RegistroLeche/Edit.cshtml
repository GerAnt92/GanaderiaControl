@model GanaderiaControl.Models.RegistroLeche
@{
    Layout = "_Layout";
    ViewData["Title"] = "Editar registro de leche";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0">Editar registro</h1>
    <a href="@Url.Action("Index", "RegistroLeche")" class="btn btn-outline-secondary">Volver</a>
</div>

<form asp-action="Edit" method="post" class="card shadow-sm">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="card-body">
        <partial name="_Form" model="Model" />
        <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
    </div>
    <div class="card-footer d-flex gap-2">
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a href="@Url.Action("Index", "RegistroLeche")" class="btn btn-light border">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
