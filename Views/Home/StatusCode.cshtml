@{
    Layout = "_Layout";
    var code = ViewBag.Code as int? ?? Context.Response?.StatusCode ?? 0;
    ViewData["Title"] = $"Error {code}";
    string titulo = code switch
    {
        404 => "Página no encontrada",
        403 => "Acceso denegado",
        401 => "No autorizado",
        _ => "Ocurrió un problema"
    };
    string detalle = code switch
    {
        404 => "La página que buscas no existe o cambió de lugar.",
        403 => "No tienes permisos para ver este recurso.",
        401 => "Debes iniciar sesión para continuar.",
        _ => "Intenta nuevamente o vuelve más tarde."
    };
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h1 class="display-6 mb-2">@titulo (@code)</h1>
                    <p class="text-muted mb-4">@detalle</p>
                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                        <a href="/" class="btn btn-primary">Ir al inicio</a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">Regresar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
